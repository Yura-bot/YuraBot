<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/header'); %>

    <title>Yura Bot | Server</title>

    <link rel="stylesheet" type="text/css" href="/css/fontawesome.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/icofont.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/themify.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/flag-icon.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/feather-icon.css">

    <link rel="stylesheet" type="text/css" href="/css/vendors/scrollbar.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/bootstrap.css">

    <link rel="stylesheet" type="text/css" href="/css/page/profil.css">
    <link id="color" rel="stylesheet" href="/css/color-1.css" media="screen">
    <link rel="stylesheet" type="text/css" href="/css/responsive.css">

    <link rel="stylesheet" type="text/css" href="/css/vendors/select2.css">
  </head>
  <body>
    <div class="tap-top"><i data-feather="chevrons-up"></i></div>
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
      <%- include('../partials/headbar'); %>
      <div class="page-body-wrapper">
       <%- include('../partials/nav'); %>
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-6">
                  <h3><%= guild.name %></h3>
                </div>
                <div class="col-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">
                    <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item lang" key="dash">Dashboard</li>
                    <li class="breadcrumb-item active"><%= guild.name %></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Page Start-->
          <div class="container-fluid">
            <div class="select2-drpdwn">
              <div class="row">

                <div class="col-sm-12 col-xl-6 col-lg-12 col-md-6">
                  <div class="card">
                    <form class="form theme-form" method="POST">

                      <div class="card-header">
                        <h5 class="card-title lang" key="autoMod">ðŸ”’ Configuration de l'auto modÃ©ration :</h5>
                      </div>
                      <div class="card-body row switch-showcase height-equal">
                        <div class="col-sm-">
                          <div class="media mb-2">
                            <label class="col-form-label m-r-10 lang" key="antiRaid">Anti raid :</label>
                            <div class="media-body text-end">
                              <div class="form-check form-switch">
                                <% if(antiraid === false) { %>
                                  <div class="media">
                                    <div class="media-body icon-state switch-outline">
                                      <label class="switch">
                                        <input type="checkbox" name="statusAntiRaid"><span class="switch-state bg-success"></span>
                                      </label>
                                    </div>
                                  </div>
                                <% } else { %>
                                  <div class="media">
                                    <div class="media-body icon-state switch-outline">
                                      <label class="switch">
                                        <input type="checkbox" checked="" name="statusAntiRaid"><span class="switch-state bg-success"></span>
                                      </label>
                                    </div>
                                  </div>
                                <% } %>
                              </div>
                            </div>
                          </div>
                          <div class="media mb-2">
                            <label class="col-form-label m-r-10 lang" key="antiPub">Anti Pub :</label>
                            <div class="media-body text-end">
                              <div class="form-check form-switch">
                                <% if(antipub === false) { %>
                                  <div class="media">
                                    <div class="media-body icon-state switch-outline">
                                      <label class="switch">
                                        <input type="checkbox" name="statusAntiPub"><span class="switch-state bg-success"></span>
                                      </label>
                                    </div>
                                  </div>
                                <% } else { %>
                                  <div class="media">
                                    <div class="media-body icon-state switch-outline">
                                      <label class="switch">
                                        <input type="checkbox" checked="" name="statusAntiPub"><span class="switch-state bg-success"></span>
                                      </label>
                                    </div>
                                  </div>
                                <% } %>
                              </div>
                            </div>
                          </div>
                          <div class="media mb-2">
                            <label class="col-form-label m-r-10 lang" key="antiLink">Anti Link :</label>
                            <div class="media-body text-end">
                              <label class="switch">
                                <% if(antilink === false) { %>
                                  <div class="media">
                                    <div class="media-body icon-state switch-outline">
                                      <label class="switch">
                                        <input type="checkbox" name="statusAntiLink"><span class="switch-state bg-success"></span>
                                      </label>
                                    </div>
                                  </div>
                                <% } else { %>
                                  <div class="media">
                                    <div class="media-body icon-state switch-outline">
                                      <label class="switch">
                                        <input type="checkbox" checked="" name="statusAntiLink"><span class="switch-state bg-success"></span>
                                      </label>
                                    </div>
                                  </div>
                                <% } %>
                              </label>
                            </div>
                          </div>
                          <div class="media mb-2">
                            <label class="col-form-label m-r-10 lang" key="antiBadWords">Anti Bad Words :</label>
                            <div class="media-body text-end">
                              <label class="switch">
                                <% if(antibadworlds === false) { %>
                                  <div class="media">
                                    <div class="media-body icon-state switch-outline">
                                      <label class="switch">
                                        <input type="checkbox" name="statusAntiBadWorlds"><span class="switch-state bg-success"></span>
                                      </label>
                                    </div>
                                  </div>
                                <% } else { %>
                                  <div class="media">
                                    <div class="media-body icon-state switch-outline">
                                      <label class="switch">
                                        <input type="checkbox" checked="" name="statusAntiBadWorlds"><span class="switch-state bg-success"></span>
                                      </label>
                                    </div>
                                  </div>
                                <% } %>
                              </label>
                            </div>
                          </div>
                        </div>
                      </div>

                    <div class="card-footer">
                      <button class="btn btn-primary lang" type="submit" name="basic" key="save">Sauvegarder</button>
                    </div>
                  </form>

                  </div>
                </div>

                <div class="col-sm-12 col-xl-6 col-lg-12 col-md-6">
                  <div class="card">
                    <form class="form theme-form" method="POST">
                      <div class="card-header">
                        <h5 class="card-title lang" key="configTitle">ðŸ§± Configuration :</h5>
                      </div>
                      <div class="card-body o-hidden">
  
                        <div class="mb-2">
                          <div class="col-form-label lang" key="ignoredChannels">Channels ignorÃ©es :</div>
                          <select class="js-example-basic-multiple-limit col-sm-12" multiple="multiple" name="channelsIgnored">
                            <% if(ignoredChannels){ %>

                              <% ignoredChannels.forEach((ch) => { %>
                                <option selected="selected">#<%= guild.channels.find((r) => r.id === ch).name %></option>
                            <% }); %>

                              <% guild.channels.filter((ch) => !ignoredChannels.includes(ch.id) && ch.type === "text").forEach((ch) => { %>
                                  <option>#<%= ch.name %></option>

                              <% }); } else { %>
                              <% guild.channels.filter((ch) => ch.id !== guild.channels[0].id && ch.type === "text").forEach((ch) => { %>
                                  <option>#<%= ch.name %></option>
                              <% }); %>
                          <% } %>
                          </select>
                        </div>
  
                        <div class="mb-2">
                          <div class="col-form-label lang" key="ignoredRoles">Roles ignorÃ©es :</div>
                          <select class="js-example-basic-multiple col-sm-12" multiple="multiple"  name="rolesIgnored">

                            <% if(ignoredRoles){ %>

                              <% ignoredRoles.forEach((ch) => { %>
                                <option selected="selected">@<%= guild.roles.find((r) => r.id === ch).name %></option>
                            <% }); %>

                              <% guild.roles.filter((r) => !ignoredRoles.includes(r.id) && r.name !== "@everyone").forEach((r) => { %>
                                  <option>@<%= r.name %></option>
                              <% }); } else { %>
                              <% guild.roles.filter((r) => r.id !== guild.roles.filter((r) => r.name !== "@everyone")[0].id && r.name !== "@everyone").forEach((r) => { %>
                                  <option>@<%= r.name %></option>
                              <% }); %>
                          <% } %>

                          </select>
                        </div>
  
                      </div>

                    <div class="card-footer">
                      <button class="btn btn-primary lang" type="submit" name="config" key="save">Sauvegarder</button>
                    </div>

                  </form>
                  </div>
                </div>
  

              </div>
            </div>
          </div>
          <!-- Page End-->
        </div>
        <%- include('../partials/footer'); %>
      </div>
    </div>

    <script src="/js/jquery-3.5.1.min.js"></script>

    <script src="/js/bootstrap/bootstrap.bundle.min.js"></script>

    <script src="/js/icons/feather-icon/feather.min.js"></script>
    <script src="/js/icons/feather-icon/feather-icon.js"></script>

    <script src="/js/scrollbar/simplebar.js"></script>
    <script src="/js/scrollbar/custom.js"></script>

    <script src="/js/config.js"></script>
    <script src="/js/height-equal.js"></script>
    <script src="/js/sidebar-menu.js"></script>
    <script src="/js/tooltip-init.js"></script>

    <script src="/js/script.js"></script>
    <script src="/js/theme-customizer/customizer.js"></script>

    <script src="/js/select2/select2.full.min.js"></script>
    <script src="/js/select2/select2-custom.js"></script>

  </body>
</html>