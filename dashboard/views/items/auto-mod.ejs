<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/header'); %>

    <title>Yura Bot | Server</title>

    <link rel="stylesheet" type="text/css" href="/css/fontawesome.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/icofont.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/themify.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/flag-icon.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/feather-icon.css">

    <link rel="stylesheet" type="text/css" href="/css/vendors/scrollbar.css">
    <link rel="stylesheet" type="text/css" href="/css/vendors/bootstrap.css">

    <link rel="stylesheet" type="text/css" href="/css/page/profil.css">
    <link id="color" rel="stylesheet" href="/css/color-1.css" media="screen">
    <link rel="stylesheet" type="text/css" href="/css/responsive.css">
  </head>
  <body>
    <div class="tap-top"><i data-feather="chevrons-up"></i></div>
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
      <%- include('../partials/headbar'); %>
      <div class="page-body-wrapper">
       <%- include('../partials/nav'); %>
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-6">
                  <h3><%= guild.name %></h3>
                </div>
                <div class="col-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">
                    <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item lang" key="dash">Dashboard</li>
                    <li class="breadcrumb-item active"><%= guild.name %></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Page Start-->
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-12">

                <div class="xl-100 col-lg-12 box-col-12">
                  <div class="card">
                    <div class="card-header">
                      <h5 class="lang" key="autoMod">⚙ Configuration de l'auto modération :</h5>
                    </div>
                    <form class="form theme-form" method="POST">
                      <div class="card-body">
  
                        <div class="tabbed-card">
                          <ul class="pull-right nav nav-pills nav-primary" id="pills-clrtab" role="tablist">
                            <li class="nav-item"><a class="nav-link active" id="pills-antiraid-tab" data-bs-toggle="pill" href="#pills-antiraid" role="tab" aria-controls="pills-antiraid" aria-selected="true"><i class="icofont icofont-shield"></i>Anti Raid</a></li>
                            <li class="nav-item"><a class="nav-link" id="pills-antipub-tab" data-bs-toggle="pill" href="#pills-antipub" role="tab" aria-controls="pills-antipub" aria-selected="false"><i class="icofont icofont-safety"></i>Anti Pub</a></li>
                            <li class="nav-item"><a class="nav-link" id="pills-antilink-tab" data-bs-toggle="pill" href="#pills-antilink" role="tab" aria-controls="pills-antilink" aria-selected="false"><i class="icofont icofont-link"></i>Anti Link</a></li>
                            <li class="nav-item"><a class="nav-link" id="pills-antibadworlds-tab" data-bs-toggle="pill" href="#pills-antibadworlds" role="tab" aria-controls="pills-antibadworlds" aria-selected="false"><i class="icofont icofont-speech-comments"></i>Anti Bad Words</a></li>
                          </ul>
                          <div class="tab-content" id="pills-clrtabContent">
                            <div class="tab-pane fade show active" id="pills-antiraid" role="tabpanel" aria-labelledby="pills-antiraid-tab">
                              <h3><u class="lang" key="antiRaid">Anti raid :</u></h3>
                              <br>
                                <% if(antiraid === false) { %>
                                    <div class="media">
                                      <label class="col-form-label m-r-10" class="lang" key="disabled">Désactivé !</label>
                                      <div class="media-body icon-state switch-outline">
                                        <label class="switch">
                                          <input type="checkbox" name="statusAntiRaid"><span class="switch-state bg-success"></span>
                                        </label>
                                      </div>
                                    </div>
                                  <% } else { %>
                                    <div class="media">
                                      <label class="col-form-label m-r-10" class="lang" key="enabled">Activé !</label>
                                      <div class="media-body icon-state switch-outline">
                                        <label class="switch">
                                          <input type="checkbox" checked="" name="statusAntiRaid"><span class="switch-state bg-success"></span>
                                        </label>
                                      </div>
                                    </div>
                                  <% } %>
                            </div>
                            <div class="tab-pane fade" id="pills-antipub" role="tabpanel" aria-labelledby="pills-antipub-tab">
                              <h3><u class="lang" key="antiPub">Anti Pub :</u></h3>
                              <br>
                                <% if(antipub === false) { %>
                                    <div class="media">
                                      <label class="col-form-label m-r-10" class="lang" key="disabled">Désactivé !</label>
                                      <div class="media-body icon-state switch-outline">
                                        <label class="switch">
                                          <input type="checkbox" name="statusAntiPub"><span class="switch-state bg-success"></span>
                                        </label>
                                      </div>
                                    </div>
                                  <% } else { %>
                                    <div class="media">
                                      <label class="col-form-label m-r-10" class="lang" key="enabled">Activé !</label>
                                      <div class="media-body icon-state switch-outline">
                                        <label class="switch">
                                          <input type="checkbox" checked="" name="statusAntiPub"><span class="switch-state bg-success"></span>
                                        </label>
                                      </div>
                                    </div>
                                  <% } %>
                            </div>
                            <div class="tab-pane fade" id="pills-antilink" role="tabpanel" aria-labelledby="pills-antilink-tab">
                              <h3><u class="lang" key="antiLink">Anti Link :</u></h3>
                              <br>
                                <% if(antilink === false) { %>
                                    <div class="media">
                                      <label class="col-form-label m-r-10" class="lang" key="disabled">Désactivé !</label>
                                      <div class="media-body icon-state switch-outline">
                                        <label class="switch">
                                          <input type="checkbox" name="statusAntiLink"><span class="switch-state bg-success"></span>
                                        </label>
                                      </div>
                                    </div>
                                  <% } else { %>
                                    <div class="media">
                                      <label class="col-form-label m-r-10" class="lang" key="enabled">Activé !</label>
                                      <div class="media-body icon-state switch-outline">
                                        <label class="switch">
                                          <input type="checkbox" checked="" name="statusAntiLink"><span class="switch-state bg-success"></span>
                                        </label>
                                      </div>
                                    </div>
                                  <% } %>
                            </div>
                            <div class="tab-pane fade" id="pills-antibadworlds" role="tabpanel" aria-labelledby="pills-antibadworlds-tab">
                              <h3><u class="lang" key="antiBadWords">Anti Bad Words :</u></h3>
                              <br>
                                <% if(antibadworlds === false) { %>
                                    <div class="media">
                                      <label class="col-form-label m-r-10" class="lang" key="disabled">Désactivé !</label>
                                      <div class="media-body icon-state switch-outline">
                                        <label class="switch">
                                          <input type="checkbox" name="statusAntiBadWorlds"><span class="switch-state bg-success"></span>
                                        </label>
                                      </div>
                                    </div>
                                  <% } else { %>
                                    <div class="media">
                                      <label class="col-form-label m-r-10" class="lang" key="enabled">Activé !</label>
                                      <div class="media-body icon-state switch-outline">
                                        <label class="switch">
                                          <input type="checkbox" checked="" name="statusAntiBadWorlds"><span class="switch-state bg-success"></span>
                                        </label>
                                      </div>
                                    </div>
                                  <% } %>
                            </div>
                          </div>
                        </div>
  
                      </div>
  
                      <div class="card-footer">
                        <button class="btn btn-primary" type="submit">Sauvegarder</button>
                      </div>
                    </form>
                  </div>
                </div>

              </div>
            </div>
          </div>
          <!-- Page End-->
        </div>
        <%- include('../partials/footer'); %>
      </div>
    </div>

    <script src="/js/jquery-3.5.1.min.js"></script>

    <script src="/js/bootstrap/bootstrap.bundle.min.js"></script>

    <script src="/js/icons/feather-icon/feather.min.js"></script>
    <script src="/js/icons/feather-icon/feather-icon.js"></script>

    <script src="/js/scrollbar/simplebar.js"></script>
    <script src="/js/scrollbar/custom.js"></script>

    <script src="/js/config.js"></script>
    <script src="/js/height-equal.js"></script>
    <script src="/js/sidebar-menu.js"></script>
    <script src="/js/tooltip-init.js"></script>

    <script src="/js/script.js"></script>
    <script src="/js/theme-customizer/customizer.js"></script>

  </body>
</html>